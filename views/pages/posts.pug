extends ../layout

block content
  section
    .container
      .row 
        .panel.panel-default
          .panel-heading    
            h3
              span.glyphicon.glyphicon-certificate
              | 欢迎来到唠嗑地儿！
        each post in posts
          a(href="#")
            .panel.panel-default
              .panel-body
                span.col-md-1 #{post.pv}
                p.col-md-6 #{post.title}
                span.col-md-2 #{user.nickname}
                span.col-md-3 #{moment(post.meta.updateAt).format('YYYY-MM-DD, h:mm:ss a')}
        ul.pagination
          li
            - if (currentPage == 1) {
                span &laquo;
            - }else{
                a(href='/posts?p=' + (currentPage-2)) &laquo;
            - }           
          - for (var i = 0; i < totalPage; i++) {
            - if (currentPage == (i + 1)) {
                li.active
                  span #{currentPage}
            - }else {
                li
                  a(href='/posts?p=' + i) #{i + 1}
            - }
          - }
          li
            - if (currentPage == totalPage) {
                span &raquo;
            - }else{
                a(href='/posts?p=' + (currentPage)) &raquo;
            - } 