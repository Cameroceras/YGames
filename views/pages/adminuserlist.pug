extends ../layout

block content
  section.adminuserlist
    .container
      .row
        table.table.table-hover.table-bordered
          thead
            tr
              th 用户名
              th 最后修改时间
              th 查看
              th 修改
              th 删除
          tbody
            each item in users
              tr(class="item-id-" + item._id)
                td #{item.username}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_blank", href="../user/#{item_id}") 查看
                td: a(target="_blank", href="../user/update/#{item_id}") 修改
                td
                  button.btn.btn-danger.del(type="button", data-id=item._id) 删除
        a.btn.btn-default(href="/admin") 返回
  script(src="../js/adminuserlist.js")