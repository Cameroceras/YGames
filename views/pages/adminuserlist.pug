extends ../layout

block content
  section.adminuserlist
    .container
      .row
        .users-content-box
          table.table.table-hover.table-bordered
            thead
              tr
                th 用户名
                th 昵称
                th 最后修改时间
                th 查看
                th 修改
                th 删除
            tbody
              each item in users
                tr(class="item-id-" + item._id)
                  td #{item.username}
                  td #{item.nickname}
                  td #{moment(item.meta.updateAt).format('YYYY-MM-DD, hh:mm:ss')}
                  td: a(target="_blank", href="../user/" + item._id) 查看
                  td: a(target="_blank", href="#") 修改
                  td
                    button.btn.btn-danger.del(type="button", data-id=item._id) 删除
        ul.pagination
          li
            - if (currentPage == 1) {
                span &laquo;
            - }else{
                a(href='/admin/userlist?p=' + (currentPage-2)) &laquo;
            - }           
          - for (var i = 0; i < totalPage; i++) {
            - if (currentPage == (i + 1)) {
                li.active
                  span #{currentPage}
            - }else {
                li
                  a(href='/admin/userlist?p=' + i) #{i + 1}
            - }
          - }
          li
            - if (currentPage == totalPage) {
                span &raquo;
            - }else{
                a(href='/admin/userlist?p=' + (currentPage)) &raquo;
            - } 
        .goback-padding-bottom  
          a.btn.btn-default(href="/admin") 返回
  include ../includes/footer
  script(src="../js/adminuserlist.js")